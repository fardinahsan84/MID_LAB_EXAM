<!DOCTYPE html>
<html>
<head>
	<title>Employee List page</title>

	<style>
			h3 {text-align: right;}
	</style>
	<script>
				function validateForm(){
				var x = document.forms["searchForm"]["search"].value;
				if (x == "") {
							alert("Search field cannot be empty!!  Put an user ID or NAME !!!");
							return false;
				}
				else{
							return true;
				}
			}
	</script>
</head>
<body>
	<form name="searchForm" onsubmit="return validateForm()" method ="post" required>
	<center>
	<h1>All Employee List </h1>
	<h3><a href="/admin">Back</a>|<a href="/logout">Logout</a></h3>
	<table>
		<tr>
			<td><input type="text" placeholder="type id/name.." name="search" ></td> <td></td> <td><input type="submit" name="choice" value="Search"></td>
			</tr>
	</table>
	<table border="1">
		<tr>
			<th>ID</th>
			<th>NAME</th>
			<th>PHONE</th>
			<th>ADDRESS</th>
			<th>GENDER</th>

		</tr>

		<% for(var i=0; i < userList.length; i++){ %>
		<tr>
			<td><%= userList[i].id %></td>
			<td><%= userList[i].name %></td>
      <td><%= userList[i].phone %></td>
			<td><%= userList[i].address %></td>
			<td><%= userList[i].gender %></td>
			<td><a href="/admin/update/<%= userList[i].id %>">EDIT</a> |
				  <a href="/admin/delete/<%= userList[i].id %>"> DELETE </a></td>
		</tr>
		<% } %>
    <tr>

    </tr>
	</table>
  </center>
 </form>
</body>
</html>
